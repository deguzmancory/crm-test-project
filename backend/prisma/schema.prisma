datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String  @id @default(uuid())
  email     String  @unique
  password  String
  role      Role    @default(USER)
  createdAt DateTime @default(now())
}

enum Role {
  ADMIN
  MANAGER
  USER
}
