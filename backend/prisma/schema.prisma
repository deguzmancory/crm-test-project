datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Project {
  id          String   @id @default(uuid())
  name        String
  description String?
  status      String   @default("pending") // Possible values: pending, active, completed
  startDate   DateTime?
  dueDate     DateTime?
  clientId    String
  managerId   String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relationships
  client  Client @relation(fields: [clientId], references: [id])
  manager User?  @relation(fields: [managerId], references: [id], name: "UserProjects")
}

model Client {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  phone     String?
  projects  Project[]
  createdAt DateTime @default(now())
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  username  String   @unique
  firstName String
  lastName  String
  password  String
  role      Role     @default(USER)
  projects  Project[] @relation(name: "UserProjects")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role {
  ADMIN
  MANAGER
  USER
}
